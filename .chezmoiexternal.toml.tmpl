{{ if eq .chezmoi.os "windows" }}
["AppData/Local/nvim"]
{{ else }}
[".config/nvim"]
{{ end }}
  type = "git-repo"
  url = "https://github.com/drop-stones/LazyVimConfig.git"
  refreshPeriod = "168h"

{{ if eq .osid "linux-arch" }}
[".local/share/hyprdots"]
  type = "git-repo"
  clone.args = ["--depth", "1"]
  url = "https://github.com/drop-stones/hyprdots.git"
  refreshPeriod = "168h"
{{ end }}
