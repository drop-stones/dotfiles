{{ if eq .use_1password true }}
[user]
{{   if eq .chezmoi.os "darwin" }}
  signingkey = ssh-ed25519 {{ .signingkey }}
{{   else }}
  signingkey = {{ .signingkey }}
{{   end }}

[gpg]
  format = ssh
  
[gpg "ssh"]
  program = {{ .gpg_ssh_program | quote }}

[commit]
  gpgsign = true

{{   if eq .chezmoi.os "windows" }}
[core]
  sshCommand = {{ .sshCommand | quote }}
{{   end }}
{{ end }}
