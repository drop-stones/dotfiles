# lazygit
export ABBR_QUIET=1

# git
abbr -S g="git"
abbr -S ga="git add"
abbr -S gst="git status"
abbr -S gb="git branch"
abbr -S gc="git commit --verbose"
abbr -S gco="git checkout"
abbr -S gd="git diff"
abbr -S glg="git log --stat"
abbr -S gl="git pull"
abbr -S gua="git pull && git submodule update --init --recursive"

# lazygit
abbr -S lg="lazygit"

# eza
abbr -S l="eza --git --icons --color=always --group-directories-first"
abbr -S ll="eza --git --icons --color=always --group-directories-first -l"
abbr -S la="eza --git --icons --color=always --group-directories-first -la"
