{{- if eq .chezmoi.os "linux" -}}
#!/bin/sh

Install() {
  pamac install --no-confirm --upgrade $1
}

sudo pacman -Syu
sudo pacman -S --noconfirm pamac-cli

# Editor
Install neovim

# Command Prompt
Install starship

# Astronvim requirements
Install bottom
Install gdu
Install lazygit
Install ripgrep
Install tree-sitter
Install unzip

# Laungages
Install clang
Install dotnet-sdk
Install go
Install lua
Install lua-language-server
Install luarocks
Install npm
Install python
Install rust
npm install -g neovim

# Commands
Install bat
Install bottom
Install dust
Install eza
Install fd
Install fzf
Install git-delta
Install hexyl
Install hyperfine
Install man-db
Install procs
Install ripgrep
Install sd
Install tldr
Install tokei
Install zoxide

{{- if .enable.onepassword -}}
# Password Manager
pamac build 1password-cli
{{- end -}}

# Add 'eval "$(zoxide init zsh)"' if not exist
grep -qxF 'eval "$(zoxide init zsh)"' ~/.zshrc || echo 'eval "$(zoxide init zsh)"' >> ~/.zshrc

# Add 'eval "$(starship init zsh)"' if not exist
grep -qxF 'eval "$(starship init zsh)"' ~/.zshrc || echo 'eval "$(starship init zsh)"' >> ~/.zshrc

# tmux
Install tmux

# oh-my-tmux
EnvPath="$HOME/EnvironmentSettings"
OhMyTmuxPath="$EnvPath/.tmux"
TmuxConfPath="$HOME/.config/tmux"
mkdir -p $EnvPath
git clone https://github.com/gpakosz/.tmux.git $OhMyTmuxPath
mkdir -p $TmuxConfPath
ln -s $OhMyTmuxPath/.tmux.conf $TmuxConfPath/tmux.conf
cp $OhMyTmuxPath/.tmux.conf.local $TmuxConfPath/tmux.conf.local
{{- end -}}
